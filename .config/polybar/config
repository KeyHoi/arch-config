[module/powermenu]
type = custom/menu

label-open = ÔÇÖ 
label-open-foreground = #FFFFFF
label-close = ÔÑí
label-close-foreground = #EE0000
label-separator = |
label-separator-foreground = #EE0000

menu-0-0 = Power
menu-0-0-exec = menu-open-1
menu-0-1 = Xrandr
menu-0-1-exec = menu-open-2

menu-1-0 = Suspend
menu-1-0-exec = systemctl suspend
menu-1-1 = Reboot
menu-1-1-exec = systemctl reboot
menu-1-2 = Shutdown
menu-1-2-exec = systemctl poweroff

menu-2-0 = Laptop  
menu-2-0-exec = xrandr --output LVDS1 --auto --primary --output HDMI3 --off && i3-msg restart
;menu-2-1 = ÔÑâÔÑà
;menu-2-1-exec = xrandr --output LVDS1 --auto --primary --output HDMI3 --auto --right-of LVDS1 && i3-msg restart
;menu-2-2 = ÔÑàÔÑâ  
;menu-2-2-exec = xrandr --output LVDS1 --auto --primary --output HDMI3 --auto --left-of LVDS1 && i3-msg restart
menu-2-1 = Monitor  
menu-2-1-exec = xrandr --output HDMI3 --auto --primary --output LVDS1 --off && i3-msg restart

